<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 name="OAuthV2-VerifyAccessToken-Continue" continueOnError="true">
  <Operation>VerifyAccessToken</Operation>
  <!-- by default, finds the token in the Authorization header -->
  <!--
  <Scope>xyz</Scope>
  -->
  <!--
      This policy sets the following flow variables:
      organization_name
      developer.id
      developer.app.name
      client_id
      grant_type
      token_type
      access_token
      accesstoken.{custom_attribute}
      issued_at
      expires_in
      status
      scope
      apiproduct.name*
      apiproduct.<custom_attribute_name>*
  -->
</OAuthV2>
